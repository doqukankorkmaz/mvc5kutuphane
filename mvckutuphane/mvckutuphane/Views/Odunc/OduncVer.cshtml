@model mvckutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>OduncVer</h2>

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label><b>Üye ID</b></label>
        @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label><b>Kitap ID</b></label>
        @Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label><b>Personel ID</b></label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label><b>Kitap Alış Tarihi</b></label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()"/>@*alınan günün tarihi *@
    </div>
    <div style="margin-top:15px">
        <label><b>Kitap İade Tarihi</b></label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>@*/iade tarihi*@
    </div>


    <div style="margin-top:15px">
        <button class="btn btn-info" style="background-color:purple; color:white">Kitap Ödünç Ver</button>
        <input type="hidden" value="False" name="ISLEMDURUM" />
    </div>

</form>
