@using mvckutuphane.Models.Entity
    @* mvckutuphane.Models.Entity namespace'indeki sınıfları kullanabileceğimizi belirtir. *@
@model List<TBLHAREKET>
    @*iadesi alınan kitapların listesi. *@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>


<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarih</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBLKITAP.AD</td>
            <td>@k.TBLUYELER.AD&nbsp @k.TBLUYELER.SOYAD</td>
            <td>@k.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARIHI).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIHI).ToString("dd/MM/yyyy")</td>

            <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-default" style="background-color:orange; color:white">Detaylar</a></td>

        </tr>
    }
</table>
